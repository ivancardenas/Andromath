<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singlevar.methods.BisectionActivity">

    <LinearLayout

        android:weightSum="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Enter the following paramaters"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <TextView
            android:id="@+id/bisection_func"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="-func-"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />


        <EditText
            android:id="@+id/bisection_xmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:hint="XMIN"
            android:inputType="numberSigned|numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/bisection_xmax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:hint="XMAX"
            android:inputType="numberSigned|numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/bisection_tolerance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:hint="TOLERANCE"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/bisection_niter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingBottom="20dp"
            android:textAllCaps="true"
            android:hint="ITERATIONS"
            android:inputType="number"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorButton"
            android:background="@drawable/button_shape"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="Bisection"
            android:text="CONTINUE" />

        <!---->

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/bisection_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAllCaps="true"
            android:enabled="false"
            android:visibility="gone"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <TableLayout
            android:id="@+id/tableLayoutProcedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/tableRowLegend"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textViewIterations"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Iter" />

                <TextView
                    android:id="@+id/textViewXi"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Xi" />

                <TextView
                    android:id="@+id/textViewFa"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="F(Xi)" />

                <TextView
                    android:id="@+id/textViewXs"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Xs" />

                <TextView
                    android:id="@+id/textViewFb"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="F(Xs)" />

                <TextView
                    android:id="@+id/textViewXm"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Xm" />

                <TextView
                    android:id="@+id/textViewSolution"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="F(Xm)" />

                <TextView
                    android:id="@+id/textViewTol"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="error" />
            </TableRow>
        </TableLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>